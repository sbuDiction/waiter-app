<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mb-5">Welcome to waiter app </h2>
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card border-secondary">
            <div class="card-header">
              <h3 class="mb-0 my-2">Sign Up</h3>
            </div>
            <div class="card-body">
              <form action="/add" method="POST" class="form" role="form" autocomplete="off">
                <div class="form-group">
                  <label for="inputName">Name</label>
                  <input type="text" name="waiter" class="form-control" id="inputName" placeholder="Waiter name">
                </div>
                <div class="form-group">
                  <label for="inputPassword3">Password</label>
                  <input type="password" name="passcode" class="form-control" id="inputPassword3" placeholder="password"
                    title="At least 6 characters with letters and numbers" required="">
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-success btn-lg float-right">Register</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!--/row-->

    </div>
    <!--/col-->
  </div>
  <!--/row-->
  <a  href="/login" class="justify-content-between"><span style="color: rgb(0, 38, 255);">Already have account? sign in</span></a>
</div>
<!--/container-->