    <form action="/filter" method="POST">
        <main role="main" class="container">
            <div class="my-3 p-3 bg-white rounded shadow-sm ">
                <h6 class="border-bottom border-gray pb-2 mb-0"><span
                        style="color: rgb(255, 60, 0);">{{name}}'</span>(s)
                    working days</h6>
                {{#each days}}
                <div class="media text-muted pt-3">
                    <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32"
                        xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                        role="img" aria-label="Placeholder: 32x32">
                        <title>Placeholder</title>
                        {{#if (green)}}
                        <rect width="100%" height="100%" fill="#ff2700" />
                        {{else if (orange)}}
                        <rect width="100%" height="100%" fill="" />
                        {{else}}
                        <rect width="100%" height="100%" fill="#ff2700" />
                        {{/if}}
                    </svg>
                    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                        <strong class="d-block text-dark"><i class="fa fa-calendar" style="color:rgb(12, 167, 20);"></i>
                            {{days_in_a_week}}</strong>
                        <strong class="d-block text-dark">Waiters: <span
                                style="color:rgb(0, 0, 0);">{{days_count}}</span></strong>
                        <strong class="d-block text-dark">Name: <span
                                style="color:rgb(255, 60, 0);">{{waiter_name}}</span></strong>
                        <small class="d-block text-center mt-3">
                            {{!-- <a href="/delete"> <button type="button" class="btn btn-light"><i class="fa fa-trash"
